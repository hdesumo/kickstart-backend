{
  "compilerOptions": {
    /* Emplacement et sortie */
    "rootDir": ".",                  // prend en compte src/ et prisma/
    "outDir": "dist",                // tous les fichiers compil√©s vont dans dist/

    /* Options de compilation */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Helpers et chemins */
    "sourceMap": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "src/**/*.ts",       // code de ton app
    "prisma/**/*.ts"     // inclut seed.ts et tout fichier prisma TS
  ],

  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    ".vercel"
  ]
}
